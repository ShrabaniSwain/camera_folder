<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardviewFolder"
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:layout_margin="8dp"
        app:cardBackgroundColor="#121212"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/folderImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/folderName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:maxLines="1"
        tools:text="Folder Name"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/cardviewFolder"
        app:layout_constraintEnd_toEndOf="@id/cardviewFolder"
        app:layout_constraintTop_toBottomOf="@id/cardviewFolder"
        android:textColor="@android:color/white"
        android:textSize="12sp" />

</androidx.constraintlayout.widget.ConstraintLayout>